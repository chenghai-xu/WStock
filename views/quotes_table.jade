          input(id='stockName',type='text',hidden, style='width: 100%;')
      td
        div
          span(class='stockCode',style='cursor: pointer;',title='点击行情')
      td
          div
            span(class='stockChangeRate')
      td
        div
          span(class='stockPrice')
      td
        div
          span(class='stockChangeAmt')
      td
        div
          span(class='stockOpenPrice')
      td
        div
          span(class='stockClosePrice')
      td
        div
          span(class='stockMaxPrice')
      td
        div
          span(class='stockMinPrice')
      td 
        div(class='delete',style='cursor: pointer; position: relative;',title="删除股票")
          br

