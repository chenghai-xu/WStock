table(class='stocksTable table table-condensed table-striped table-hover')
  thead
    tr
      //th(width='14px')
      //th(width='26px') 标记 
      th(style='white-space: nowrap;width:60px') 股票名称
      th(style='white-space: nowrap;width:60px') 股票代码
      th(style='white-space: nowrap;width:60px') 涨跌幅
      th(style='white-space: nowrap;width:60px') 当前价
      th(style='white-space: nowrap;width:60px') 涨跌点
      th(style='white-space: nowrap;width:60px') 今开
      th(style='white-space: nowrap;width:60px') 昨收
      th(style='white-space: nowrap;width:60px') 最高
      th(style='white-space: nowrap;width:60px') 最低
      th(style='white-space: nowrap;width:40px') 操作
