script(type='text/javascript', src='/javascripts/order_dlg.js')
div(class='modal fade container',id='new-order-modal', tabindex='-1',role='dialog',aria-labelledby='new-modal-label', aria-hidden='true')
  div(class='modal-content')
    div(class='modal-header')
      button(type='button',class='close',data-dismiss='modal',aria-hidden='true')
      h4(class='modal-title', id='new-modal-label') 新订单
    div(class='modal-body')
      form(id='form-new-order',action='/positions/order?action=new', method='post',onsubmit='return false', class='form-horizontal',role='form')
        div(class='form-group')
          label(class='col-sm-1 control-label') 时间 
          div(class='col-sm-3')
            input(id='order-time',name='order-time',type='datetime-local',class='form-control', required)
        div(class='form-group',type='hidden')
          div
            input(id='order-type',name='order-type',type='hidden',value='BUY', required)
        div(class='form-group')
          label(class='col-sm-1 control-label') 类型 
          div(class='col-sm-2')
            select(id='order-type-select',onchange='order_direction_changed(this.value)')      
              option(value='BUY')       买      
              option(value='SELL')      卖     
              option(value='SUBSCRIBE') 申购
              option(value='REDEEM')    赎回   
              option(value='DELIVERY')  赠股 
              option(value='DIVIDEN')   分红  
        div(class='form-group')
          label(class='col-sm-1 control-label') 代码 
          div(class='col-sm-2')
            input(id='order-code',name='order-code',type='text',class='form-control', onfocus='enter_code_input(this)',required)
        div(class='form-group')
          label(class='col-sm-1 control-label') 名称 
          div(class='col-sm-2')
            input(id='order-name',name='order-name',type='text',class='form-control', required)
        div(class='form-group')
          label(class='col-sm-1 control-label') 价格 
          div(class='col-sm-2')
            input(id='order-price',name='order-price',type='number',class='form-control',step='0.001', onfocus='enter_price_input(this)', onblur='init_volume_input(this)',min='0',required)
        div(class='form-group')
          label(class='col-sm-1 control-label') 数量 
          div(class='col-sm-2')
            input(id='order-volume',name='order-volume',type='number',class='form-control',onblur='exit_volume_input(this)',min='0', required)
          div(class='col-sm-2')
            label(id='order-volume-tip')
        div(class='form-group')
          label(class='col-sm-1 control-label') 费用 
          div(class='col-sm-2')
            input(id='order-fee',name='order-fee',type='number',class='form-control', value='0', min='0', required)
        div(class='form-group')
          label(class='col-sm-1 control-label') 金额 
          div(class='col-sm-2')
            input(id='order-amount',name='order-amount',type='number',class='form-control', onfocus='enter_amount_input(this)', min='0', required)
        div(class='form-group')
          div(class='col-sm-1')
          div(class='col-sm-1')
            button(type='button',class='btn btn-default',data-dismiss="modal") 取消 
          div(class='col-sm-1')
            button(type='submit',class='btn btn-primary') 提交 
          div(class='col-sm-2')    
            label(id='msg',style='color: red;')
    div(class='modal-footer')
